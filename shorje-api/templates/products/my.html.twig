                    </a>
                    <a href="/products/my" class="flex items-center space-x-2 text-emerald-600 dark:text-emerald-400 font-medium transition-colors">
                        <i class="fas fa-box"></i>
                        <span>منتجاتي</span>
                    </a>
                </div>

                <!-- User Actions -->
                <div class="flex items-center space-x-4">
                    {% if user %}

// Delete product
async function deleteProduct(productId) {
    if (!confirm('هل أنت متأكد من حذف هذا المنتج؟')) {
        return;
    }
    
    try {
        showLoading();
        
        const response = await apiCall(`/web/products/${productId}`, {
            method: 'DELETE'
        });
        
        if (response.ok) {
            showToast('تم حذف المنتج بنجاح!', 'success');
            loadMyProducts(); // Reload products
        } else {
            const result = await response.json();
            showToast(result.error || 'حدث خطأ أثناء حذف المنتج', 'error');
        }
    } catch (error) {
        showToast('حدث خطأ أثناء حذف المنتج', 'error');
    } finally {
        hideLoading();
    }
}


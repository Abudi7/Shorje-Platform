                        <span class="text-gray-700 dark:text-gray-300 font-medium">{{ app.user.firstName }} {{ app.user.lastName }}</span>
                        <i class="fas fa-chevron-down text-gray-400 text-sm" id="dropdownArrow"></i>
                    </button>
                    
                    <!-- Dropdown Menu -->
                    <div id="userDropdownMenu" class="absolute right-0 mt-2 w-48 bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-gray-200 dark:border-slate-600 opacity-0 invisible scale-95 transition-all duration-200">
                        <div class="py-2">
                            <a href="/profile" class="flex items-center space-x-3 px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-slate-700 transition-colors">
                                <i class="fas fa-user text-gray-400"></i>
                                <span>الملف الشخصي</span>
                            </a>
                            <a href="/products/my" class="flex items-center space-x-3 px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-slate-700 transition-colors">
                                <i class="fas fa-box text-gray-400"></i>
                                <span>منتجاتي</span>
                            </a>
                            <a href="/saved" class="flex items-center space-x-3 px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-slate-700 transition-colors">
                                <i class="fas fa-heart text-gray-400"></i>
                                <span>المحفوظات</span>
                            </a>
                            <hr class="my-2 border-gray-200 dark:border-slate-600">
                            <a href="/logout" class="flex items-center space-x-3 px-4 py-3 text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors">

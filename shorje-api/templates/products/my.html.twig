                            </div>
                            <div class="text-center">
                                <label for="productImage2" class="cursor-pointer">
                                    <div id="image2Preview" class="w-full h-32 border-2 border-dashed border-gray-300 dark:border-slate-600 rounded-2xl flex items-center justify-center hover:border-emerald-500 transition-colors">
                                        <div class="text-center">
                                            <i class="fas fa-camera text-gray-400 text-2xl mb-2"></i>
                                            <p class="text-sm text-gray-500">الصورة الثانية</p>
                                        </div>
                                    </div>
                                </label>
                                <input type="file" id="productImage2" name="image2" accept="image/*" class="hidden" onchange="previewImage(this, 'image2Preview')">
                            </div>
                            <div class="text-center">
                                <label for="productImage3" class="cursor-pointer">
                                    <div id="image3Preview" class="w-full h-32 border-2 border-dashed border-gray-300 dark:border-slate-600 rounded-2xl flex items-center justify-center hover:border-emerald-500 transition-colors">
                                        <div class="text-center">
                                            <i class="fas fa-camera text-gray-400 text-2xl mb-2"></i>
                                            <p class="text-sm text-gray-500">الصورة الثالثة</p>
                                        </div>
                                    </div>
                                </label>
                                <input type="file" id="productImage3" name="image3" accept="image/*" class="hidden" onchange="previewImage(this, 'image3Preview')">
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="flex justify-end space-x-4 pt-6">
                        <button type="button" onclick="closeAddProductModal()" 
                                class="px-6 py-3 bg-gray-500 hover:bg-gray-600 text-white rounded-2xl font-semibold transition-all duration-300">
                            إلغاء
                        </button>
                        <button type="submit" 
                                class="px-8 py-3 bg-gradient-to-r from-emerald-500 to-blue-600 hover:from-emerald-600 hover:to-blue-700 text-white rounded-2xl font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg">
                            <i class="fas fa-plus ml-2"></i>
                            إضافة المنتج
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Global variables
let currentProducts = [];

// Load messages count on page load
document.addEventListener('DOMContentLoaded', function() {
    loadMessagesCount();
    loadMyProducts();
    startRealTimeUpdates();
});

// Load messages count
async function loadMessagesCount() {
    try {
        const response = await apiCall('/web/conversations');
        const data = await response.json();
        
        let totalUnread = 0;
        if (data.conversations) {
            data.conversations.forEach(conversation => {
                totalUnread += conversation.unreadCount || 0;
            });
        }
        
        updateMessagesBadge(totalUnread);
    } catch (error) {
        console.error('Error loading messages count:', error);

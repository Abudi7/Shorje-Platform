        </div>

        <!-- Add Product Button -->
        <div class="text-center mb-8">
            <button onclick="openAddProductModal()" class="bg-gradient-to-r from-emerald-500 to-blue-600 hover:from-emerald-600 hover:to-blue-700 text-white px-8 py-4 rounded-2xl font-bold text-lg transition-all duration-300 transform hover:scale-105 shadow-2xl">

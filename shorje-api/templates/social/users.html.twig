{% extends 'base.html.twig' %}

{% block title %}المستخدمين - شورجي{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100">
    <!-- Navigation -->
    <nav class="bg-white/90 backdrop-blur-md shadow-lg border-b border-white/20 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0 flex items-center">
                        <div class="h-10 w-10 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-xl flex items-center justify-center mr-3 shadow-lg">
                            <i class="fas fa-shield-alt text-white text-lg"></i>
                        </div>
                        <h1 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">شورجي</h1>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/home" class="bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-white px-6 py-2 rounded-full text-sm font-medium transition-all duration-200 transform hover:scale-105 shadow-lg">
                        <i class="fas fa-home ml-2"></i>الرئيسية
                    </a>
                    <a href="/profile" class="bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white px-6 py-2 rounded-full text-sm font-medium transition-all duration-200 transform hover:scale-105 shadow-lg">
                        <i class="fas fa-user ml-2"></i>الملف الشخصي
                    </a>
                    <button onclick="logout()" class="bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white px-6 py-2 rounded-full text-sm font-medium transition-all duration-200 transform hover:scale-105 shadow-lg">
                        <i class="fas fa-sign-out-alt ml-2"></i>تسجيل الخروج
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">
                <i class="fas fa-users ml-3 text-blue-600"></i>المستخدمين
            </h1>
            <p class="text-lg text-gray-600">اكتشف وتواصل مع المستخدمين الآخرين</p>
        </div>

        <!-- Search Section -->
        <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">
                <i class="fas fa-search ml-2 text-purple-600"></i>البحث عن البائعين
            </h2>
            
            <div class="flex flex-col md:flex-row gap-4">
                <div class="flex-1">
                    <input type="text" id="userSearchInput" placeholder="ابحث عن بائع بالاسم أو البريد الإلكتروني..." 
                           class="w-full px-4 py-3 bg-gray-100 border-0 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500">
                </div>
                <button onclick="clearSearch()" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-6 py-3 rounded-xl font-medium transition-all duration-300">
                    <i class="fas fa-times ml-2"></i>مسح البحث
                </button>
            </div>
            
            <!-- Search Results -->
            <div id="userSearchResults" class="mt-6 space-y-4 max-h-96 overflow-y-auto">
                <!-- Search results will be populated here -->
            </div>
        </div>

        <!-- Users Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for user in users %}
                <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6 hover:shadow-2xl transition-all duration-300 transform hover:scale-105">
                    <!-- User Header -->
                    <div class="flex items-center space-x-4 mb-4">
                        <div class="relative">
                            <img src="/api/profile/image/{{ user.id }}/profile" 
                                 alt="صورة الملف الشخصي" 
                                 class="h-16 w-16 rounded-full object-cover border-4 border-white shadow-lg"
                                 onerror="this.src='data:image/svg+xml;base64,'">
                        </div>
                        <div class="flex-1">
                            <h3 class="text-lg font-bold text-gray-900">{{ user.getFullName() }}</h3>
                            <p class="text-sm text-gray-600">{{ user.email }}</p>
                        </div>
                    </div>

                    <!-- Bio -->
                    {% if user.bio %}
                        <div class="mb-4">
                            <p class="text-gray-700 text-sm leading-relaxed">{{ user.bio|length > 100 ? user.bio|slice(0, 100) ~ '...' : user.bio }}</p>
                        </div>
                    {% endif %}

                    <!-- User Info -->
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center space-x-4 text-sm text-gray-600">
                            {% if user.age %}
                                <span><i class="fas fa-calendar ml-1"></i>{{ user.age }} سنة</span>
                            {% endif %}
                            {% if user.phoneNumber %}
                                <span><i class="fas fa-phone ml-1"></i>{{ user.phoneNumber }}</span>
                            {% endif %}
                        </div>
                        <span class="px-2 py-1 rounded-full text-xs font-medium {{ user.isVerified ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
                            {{ user.isVerified ? 'مؤكد' : 'غير مؤكد' }}
                        </span>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex space-x-3">
                        <button onclick="toggleFollow({{ user.id }})" 
                                id="followBtn{{ user.id }}"
                                class="flex-1 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white px-4 py-2 rounded-xl font-medium transition-all duration-200 transform hover:scale-105 shadow-lg">
                            <i class="fas fa-user-plus ml-2"></i>
                            <span id="followText{{ user.id }}">متابعة</span>
                        </button>
                        <button onclick="startChat({{ user.id }})" 
                                class="flex-1 bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white px-4 py-2 rounded-xl font-medium transition-all duration-200 transform hover:scale-105 shadow-lg">
                            <i class="fas fa-comment ml-2"></i>رسالة
                        </button>
                    </div>

                    <!-- Follow Stats -->
                    <div class="mt-4 flex justify-center space-x-6 text-sm text-gray-600">
                        <div class="text-center">
                            <div class="font-bold" id="followersCount{{ user.id }}">0</div>
                            <div>متابع</div>
                        </div>
                        <div class="text-center">
                            <div class="font-bold" id="followingCount{{ user.id }}">0</div>
                            <div>متابع</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% if users is empty %}
            <div class="text-center py-12">
                <div class="text-6xl text-gray-300 mb-4">
                    <i class="fas fa-users"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-600 mb-2">لا يوجد مستخدمون آخرون</h3>
                <p class="text-gray-500">كن أول من ينضم إلى منصة شورجي!</p>
            </div>
        {% endif %}
    </div>
</div>

<script>
// Follow/Unfollow functionality
async function toggleFollow(userId) {
    const followBtn = document.getElementById(`followBtn${userId}`);
    const followText = document.getElementById(`followText${userId}`);
    
    try {
        // Check current follow status
        const statusResponse = await apiCall(`/api/follow-status/${userId}`);
        const isFollowing = statusResponse.isFollowing;
        
        let response;
        if (isFollowing) {
            response = await apiCall(`/api/unfollow/${userId}`, { method: 'POST' });
            followText.textContent = 'متابعة';
            followBtn.className = followBtn.className.replace('from-red-600 to-red-700', 'from-blue-600 to-indigo-600').replace('hover:from-red-700 hover:to-red-700', 'hover:from-blue-700 hover:to-indigo-700');
        } else {
            response = await apiCall(`/api/follow/${userId}`, { method: 'POST' });
            followText.textContent = 'إلغاء المتابعة';
            followBtn.className = followBtn.className.replace('from-blue-600 to-indigo-600', 'from-red-600 to-red-700').replace('hover:from-blue-700 hover:to-indigo-700', 'hover:from-red-700 hover:to-red-700');
        }
        
        // Update stats
        document.getElementById(`followersCount${userId}`).textContent = response.followersCount;
        showToast(response.message, 'success');
        
    } catch (error) {
        showToast(error.message || 'حدث خطأ أثناء المتابعة', 'error');
    }
}

// Start chat functionality
function startChat(userId) {
    window.location.href = `/chat/${userId}`;
}

// Load follow status for all users
async function loadFollowStatuses() {
    const users = {{ users|map(u => u.id)|json_encode|raw }};
    
    for (const userId of users) {
        try {
            const response = await apiCall(`/api/follow-status/${userId}`);
            document.getElementById(`followersCount${userId}`).textContent = response.followersCount;
            document.getElementById(`followingCount${userId}`).textContent = response.followingCount;
            
            // Update follow button state
            const followBtn = document.getElementById(`followBtn${userId}`);
            const followText = document.getElementById(`followText${userId}`);
            
            if (response.isFollowing) {
                followText.textContent = 'إلغاء المتابعة';
                followBtn.className = followBtn.className.replace('from-blue-600 to-indigo-600', 'from-red-600 to-red-700').replace('hover:from-blue-700 hover:to-indigo-700', 'hover:from-red-700 hover:to-red-700');
            }
        } catch (error) {
            console.error(`Failed to load follow status for user ${userId}:`, error);
        }
    }
}

// User Search functionality
async function searchUsers(query) {
    if (query.length < 2) {
        document.getElementById('userSearchResults').innerHTML = '';
        return;
    }
    
    try {
        const response = await apiCall(`/api/search-sellers?q=${encodeURIComponent(query)}`);
        
        if (response.sellers && response.sellers.length > 0) {
            displayUserSearchResults(response.sellers);
        } else {
            document.getElementById('userSearchResults').innerHTML = '<p class="text-gray-500 text-center py-4">لم يتم العثور على مستخدمين</p>';
        }
    } catch (error) {
        console.error('User search error:', error);
        document.getElementById('userSearchResults').innerHTML = '<p class="text-red-500 text-center py-4">حدث خطأ أثناء البحث</p>';
    }
}

function displayUserSearchResults(users) {
    const resultsContainer = document.getElementById('userSearchResults');
    
    const usersHtml = users.map(user => `
        <div class="bg-gray-50 rounded-xl p-4 border border-gray-200 hover:bg-gray-100 transition-colors">
            <div class="flex items-center space-x-4">
                <div class="h-12 w-12 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-full flex items-center justify-center overflow-hidden">
                    <img src="/api/profile/image/${user.id}/profile" 
                         alt="${user.name}" 
                         class="w-full h-full object-cover"
                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                    <i class="fas fa-user text-white text-lg" style="display: none;"></i>
                </div>
                <div class="flex-1">
                    <h4 class="font-semibold text-gray-900">${user.name}</h4>
                    <p class="text-sm text-gray-600">${user.email}</p>
                    ${user.isVerified ? '<span class="text-xs text-green-500"><i class="fas fa-check-circle ml-1"></i>مؤكد</span>' : ''}
                </div>
                <div class="flex space-x-2">
                    <button onclick="viewUserProfile(${user.id})" class="bg-purple-500 hover:bg-purple-600 text-white px-3 py-2 rounded-lg text-sm font-medium transition-all duration-300">
                        <i class="fas fa-user ml-1"></i>الملف
                    </button>
                    <button onclick="startChat(${user.id})" class="bg-green-500 hover:bg-green-600 text-white px-3 py-2 rounded-lg text-sm font-medium transition-all duration-300">
                        <i class="fas fa-comment ml-1"></i>رسالة
                    </button>
                    <button onclick="toggleFollow(${user.id})" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-2 rounded-lg text-sm font-medium transition-all duration-300">
                        <i class="fas fa-user-plus"></i>
                    </button>
                </div>
            </div>
        </div>
    `).join('');
    
    resultsContainer.innerHTML = usersHtml;
}

function clearSearch() {
    document.getElementById('userSearchInput').value = '';
    document.getElementById('userSearchResults').innerHTML = '';
}

function viewUserProfile(userId) {
    window.location.href = `/profile/${userId}`;
}

// Load follow statuses when page loads
document.addEventListener('DOMContentLoaded', function() {
    loadFollowStatuses();
    
    // Add search input listener
    document.getElementById('userSearchInput').addEventListener('input', debounce(function(e) {
        searchUsers(e.target.value);
    }, 300));
});

function debounce(func, wait) {
    let timeout;
    return function executedFunction(...args) {
        const later = () => {
            clearTimeout(timeout);
            func(...args);
        };
        clearTimeout(timeout);
        timeout = setTimeout(later, wait);
    };
}
</script>
{% endblock %}

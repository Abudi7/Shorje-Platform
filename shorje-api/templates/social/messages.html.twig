// Format message time in Iraq timezone
function formatMessageTime(timestamp) {
    const date = new Date(timestamp);
    const now = new Date();
    const diffInHours = (now - date) / (1000 * 60 * 60);
    
    // Format directly in Iraq timezone
    if (diffInHours < 24) {
        return date.toLocaleTimeString('ar-SA', { 
            hour: '2-digit', 
            minute: '2-digit',
            timeZone: 'Asia/Baghdad',
            hour12: false
        });
    } else {
        return date.toLocaleDateString('ar-SA', { 
            day: 'numeric',
            month: 'short',
            hour: '2-digit',
            minute: '2-digit',
            timeZone: 'Asia/Baghdad',
            hour12: false
        });
    }
}


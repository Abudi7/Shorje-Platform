let lastMessageCount = 0;

function startRealTimeUpdates() {
    // Update counts every 30 seconds
    setInterval(() => {
        loadMessagesCount();
    }, 30000);
    
    // Check for new messages every 10 seconds for toast notifications
    setInterval(() => {
        checkForNewMessages();
    }, 10000);
}

// Check for new messages and show toast notifications
async function checkForNewMessages() {
    try {
        console.log('Checking for new messages (users page)');
        const response = await apiCall('/web/conversations');
        const currentCount = response.unreadCount || 0;
        console.log('Current message count:', currentCount, 'Last count:', lastMessageCount);
        
        if (currentCount > lastMessageCount) {
            const newMessages = currentCount - lastMessageCount;
            showToast(`لديك ${newMessages} رسالة جديدة`, 'success');
            playMessageSound();
        }
        
        lastMessageCount = currentCount;
        updateMessagesBadge(currentCount);
    } catch (error) {
        console.error('Error checking for new messages:', error);
    }
}

// Auto-search on filter change
document.addEventListener('DOMContentLoaded', function() {
    // Load messages count
    loadMessagesCount();
    
    const locationFilter = document.getElementById('locationFilter');
    const ageFilter = document.getElementById('ageFilter');
    const genderFilter = document.getElementById('genderFilter');
    const mainSearchInput = document.getElementById('mainSearchInput');
    
    // Auto-search when main search input changes
    if (mainSearchInput) {
        mainSearchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                performMainSearch();
            }
        });
    }
    
    [locationFilter, ageFilter, genderFilter].forEach(filter => {
        filter.addEventListener('change', function() {
            if (this.value) {
                searchUsers();
            }
        });
    });
    
    // Start real-time updates
    startRealTimeUpdates();
});

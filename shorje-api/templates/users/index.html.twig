<script>
// Follow/Unfollow functionality
async function toggleFollow(userId) {
    const followBtn = document.getElementById(`followBtn${userId}`);
    const followText = document.getElementById(`followText${userId}`);
    
    try {
        // Check current follow status
        const statusResponse = await apiCall(`/web/follow-status/${userId}`);
        const isFollowing = statusResponse.isFollowing;
        
        let response;
        if (isFollowing) {
            response = await apiCall(`/web/unfollow/${userId}`, { method: 'POST' });
            followText.textContent = 'متابعة';
            followBtn.className = followBtn.className.replace('from-red-600 to-red-700', 'from-blue-600 to-indigo-600').replace('hover:from-red-700 hover:to-red-700', 'hover:from-blue-700 hover:to-indigo-700');
        } else {
            response = await apiCall(`/web/follow/${userId}`, { method: 'POST' });
            followText.textContent = 'إلغاء المتابعة';
            followBtn.className = followBtn.className.replace('from-blue-600 to-indigo-600', 'from-red-600 to-red-700').replace('hover:from-blue-700 hover:to-indigo-700', 'hover:from-red-700 hover:to-red-700');
        }
        
        // Update stats
        document.getElementById(`followersCount${userId}`).textContent = response.followersCount;
        showToast(response.message, 'success');
        
    } catch (error) {
        showToast(error.message || 'حدث خطأ أثناء المتابعة', 'error');
    }
}

// Start chat functionality
function startChat(userId) {
    window.location.href = `/messages?user=${userId}`;
}

// Load follow status for all users (including top sellers)
async function loadFollowStatuses() {
    const users = {{ topSellers is defined ? topSellers|map(u => u.id)|json_encode|raw : '[]' }};
    
    for (const userId of users) {
        try {
            const response = await apiCall(`/web/follow-status/${userId}`);
            document.getElementById(`followersCount${userId}`).textContent = response.followersCount;
            document.getElementById(`followingCount${userId}`).textContent = response.followingCount;
            
            // Update follow button state
            const followBtn = document.getElementById(`followBtn${userId}`);
            const followText = document.getElementById(`followText${userId}`);
            
            if (response.isFollowing) {
                followText.textContent = 'إلغاء المتابعة';
                followBtn.className = followBtn.className.replace('from-blue-600 to-indigo-600', 'from-red-600 to-red-700').replace('hover:from-blue-700 hover:to-indigo-700', 'hover:from-red-700 hover:to-red-700');
            }
        } catch (error) {
            console.error(`Failed to load follow status for user ${userId}:`, error);
        }
    }
}

// User Search functionality
async function searchUsers(query) {
    if (query.length < 2) {
        document.getElementById('userSearchResults').innerHTML = '';
        return;
    }
    
    try {
        const response = await apiCall(`/web/search-sellers?q=${encodeURIComponent(query)}`);
        
        if (response.sellers && response.sellers.length > 0) {
            displayUserSearchResults(response.sellers);
        } else {
            document.getElementById('userSearchResults').innerHTML = '<p class="text-gray-500 text-center py-4">لم يتم العثور على مستخدمين</p>';
        }
    } catch (error) {
        console.error('User search error:', error);

{% extends 'base.html.twig' %}

{% block title %}إعادة تعيين كلمة المرور - شورجي{% endblock %}

{% block footer %}{% endblock %}

{% block theme_toggle %}{% endblock %}
{% block notification_bell %}{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <!-- Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-cyan-300 dark:bg-cyan-600 rounded-full mix-blend-multiply filter blur-xl opacity-20 dark:opacity-10 animate-float"></div>
        <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-blue-300 dark:bg-blue-600 rounded-full mix-blend-multiply filter blur-xl opacity-20 dark:opacity-10 animate-float" style="animation-delay: 1s;"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-purple-300 dark:bg-purple-600 rounded-full mix-blend-multiply filter blur-xl opacity-10 dark:opacity-5 animate-pulse-slow"></div>
    </div>
    
    <div class="relative max-w-md w-full space-y-8">
        <!-- Header -->
        <div class="text-center">
            <div class="mx-auto h-20 w-20 bg-gradient-to-r from-cyan-500 to-blue-600 dark:from-cyan-400 dark:to-blue-500 rounded-2xl flex items-center justify-center mb-6 floating-animation shadow-2xl">
                <i class="fas fa-lock text-white text-2xl"></i>
            </div>
            <h2 class="text-4xl font-bold text-slate-800 dark:text-white mb-3">
                إعادة تعيين كلمة المرور
            </h2>
            <p class="text-slate-600 dark:text-slate-300 text-lg">
                أدخل كلمة المرور الجديدة أدناه
            </p>
        </div>
        
        <!-- Reset Password Form -->
        <div class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 dark:border-slate-700/20 p-10">
            <form id="resetPasswordForm" class="space-y-6">
                <input type="hidden" id="token" value="{{ app.request.query.get('token') }}">
                
                <div class="space-y-4">
                    <div>
                        <label for="password" class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-3">
                            <i class="fas fa-lock ml-2"></i>كلمة المرور الجديدة
                        </label>
                        <div class="relative">
                            <input 
                                id="password" 
                                name="password" 
                                type="password" 
                                autocomplete="new-password" 
                                required 
                                class="w-full px-4 py-4 border border-slate-300 dark:border-slate-600 rounded-2xl focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all duration-300 bg-white/80 dark:bg-slate-700/80 backdrop-blur-sm text-slate-800 dark:text-white pr-12"
                                placeholder="أدخل كلمة المرور الجديدة"
                            >
                            <button 
                                type="button" 
                                onclick="togglePassword('password')" 
                                class="absolute inset-y-0 right-0 pr-3 flex items-center text-slate-400 hover:text-slate-600"
                            >
                                <i id="passwordToggle" class="fas fa-eye"></i>
                            </button>
                        </div>
                        <div class="mt-1 text-xs text-slate-500 dark:text-slate-400">
                            يجب أن تكون كلمة المرور 6 أحرف على الأقل
                        </div>
                    </div>
                    
                    <div>
                        <label for="confirmPassword" class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-3">
                            <i class="fas fa-lock ml-2"></i>تأكيد كلمة المرور
                        </label>
                        <div class="relative">
                            <input 
                                id="confirmPassword" 
                                name="confirmPassword" 
                                type="password" 
                                autocomplete="new-password" 
                                required 
                                class="w-full px-4 py-4 border border-slate-300 dark:border-slate-600 rounded-2xl focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all duration-300 bg-white/80 dark:bg-slate-700/80 backdrop-blur-sm text-slate-800 dark:text-white pr-12"
                                placeholder="أكد كلمة المرور الجديدة"
                            >
                            <button 
                                type="button" 
                                onclick="togglePassword('confirmPassword')" 
                                class="absolute inset-y-0 right-0 pr-3 flex items-center text-slate-400 hover:text-slate-600"
                            >
                                <i id="confirmPasswordToggle" class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <button type="submit" class="w-full bg-gradient-to-r from-cyan-500 to-blue-600 hover:from-cyan-600 hover:to-blue-700 text-white font-semibold py-4 px-6 rounded-2xl transition-all duration-300 transform hover:scale-105 shadow-2xl">
                    <i class="fas fa-save ml-2"></i>
                    إعادة تعيين كلمة المرور
                </button>
            </form>

            <!-- Back to Login -->
            <div class="mt-6 text-center">
                <p class="text-sm text-slate-600 dark:text-slate-300">
                    تذكرت كلمة المرور؟ 
                    <a href="{{ path('app_login') }}" class="font-semibold text-cyan-500 hover:text-cyan-400 transition-colors">
                        العودة لتسجيل الدخول
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('resetPasswordForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const password = document.getElementById('password').value;
    const confirmPassword = document.getElementById('confirmPassword').value;
    const token = document.getElementById('token').value;
    
    // Validation
    if (!validatePassword(password)) {
        showToast('كلمة المرور يجب أن تكون 6 أحرف على الأقل', 'error');
        return;
    }
    
    if (password !== confirmPassword) {
        showToast('كلمات المرور غير متطابقة', 'error');
        return;
    }
    
    if (!token) {
        showToast('رابط إعادة التعيين غير صحيح', 'error');
        return;
    }
    
    showLoading();
    
    try {
        const data = await apiCall('/api/reset-password', {
            method: 'POST',
            body: JSON.stringify({ 
                token: token,
                password: password 
            })
        });
        
        showToast('تم إعادة تعيين كلمة المرور بنجاح!', 'success');
        
        setTimeout(() => {
            window.location.href = '/login';
        }, 2000);
        
    } catch (error) {
        showToast(error.message || 'فشل في إعادة تعيين كلمة المرور. يرجى المحاولة مرة أخرى.', 'error');
    } finally {
        hideLoading();
    }
});

function togglePassword(fieldId) {
    const field = document.getElementById(fieldId);
    const toggle = document.getElementById(fieldId + 'Toggle');
    
    if (field.type === 'password') {
        field.type = 'text';
        toggle.classList.remove('fa-eye');
        toggle.classList.add('fa-eye-slash');
    } else {
        field.type = 'password';
        toggle.classList.remove('fa-eye-slash');
        toggle.classList.add('fa-eye');
    }
}

function validatePassword(password) {
    return password.length >= 6;
}

function showLoading() {
    const button = document.querySelector('#resetPasswordForm button[type="submit"]');
    button.disabled = true;
    button.innerHTML = '<i class="fas fa-spinner fa-spin ml-2"></i>جاري الحفظ...';
}

function hideLoading() {
    const button = document.querySelector('#resetPasswordForm button[type="submit"]');
    button.disabled = false;
    button.innerHTML = '<i class="fas fa-save ml-2"></i>إعادة تعيين كلمة المرور';
}
</script>
{% endblock %}
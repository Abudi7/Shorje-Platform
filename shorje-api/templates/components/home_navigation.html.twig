<script>
// Navigation functionality
document.addEventListener('DOMContentLoaded', function() {
    // User dropdown
    const userDropdown = document.getElementById('userDropdown');
    const userDropdownMenu = document.getElementById('userDropdownMenu');
    const dropdownArrow = document.getElementById('dropdownArrow');
    
    if (userDropdown && userDropdownMenu) {
        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            if (!userDropdown.contains(event.target)) {
                userDropdownMenu.classList.add('opacity-0', 'invisible', 'scale-95');
                userDropdownMenu.classList.remove('opacity-100', 'visible', 'scale-100');
                if (dropdownArrow) dropdownArrow.classList.remove('rotate-180');
            }
        });
    }
    
    // Initialize theme
    initTheme();
    
    // Close language dropdown when clicking outside
    document.addEventListener('click', function(event) {
        const languageContainer = document.getElementById('languageSwitcherContainer');
        const languageDropdown = document.getElementById('languageDropdown');
        if (languageContainer && languageDropdown && !languageContainer.contains(event.target)) {
            languageDropdown.classList.add('hidden');
        }
    });
});

function toggleUserDropdown() {
    const dropdown = document.getElementById('userDropdownMenu');
    const arrow = document.getElementById('dropdownArrow');
    
    if (dropdown.classList.contains('opacity-0')) {
        dropdown.classList.remove('opacity-0', 'invisible', 'scale-95');
        dropdown.classList.add('opacity-100', 'visible', 'scale-100');
        if (arrow) arrow.classList.add('rotate-180');
    } else {
        dropdown.classList.add('opacity-0', 'invisible', 'scale-95');
        dropdown.classList.remove('opacity-100', 'visible', 'scale-100');
        if (arrow) arrow.classList.remove('rotate-180');
    }
}

function toggleLanguageSwitcher() {
    const dropdown = document.getElementById('languageDropdown');
    dropdown.classList.toggle('hidden');
}

function toggleTheme() {
    const html = document.documentElement;
    const currentTheme = localStorage.getItem('theme') || 'light';
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
    
    // Toggle dark class
    if (newTheme === 'dark') {
        html.classList.add('dark');
    } else {
        html.classList.remove('dark');
    }
    
    // Save preference
    localStorage.setItem('theme', newTheme);
}

function initTheme() {
    const savedTheme = localStorage.getItem('theme');
    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    const theme = savedTheme || (prefersDark ? 'dark' : 'light');
    
    if (theme === 'dark') {
        document.documentElement.classList.add('dark');
    } else {
        document.documentElement.classList.remove('dark');
    }
    
    // Save initial theme if not set
    if (!savedTheme) {
        localStorage.setItem('theme', theme);
    }
}

function openMessages() {
    window.location.href = '/messages';
}
</script>


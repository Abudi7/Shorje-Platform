        window.location.href = '/logout';
    }
}

// Load message count
async function loadMessageCount() {
    try {
        const response = await fetch('/api/messages/unread-count');
        const data = await response.json();
        const messageCount = data.unread_count || 0;
        
        const messagesCountElement = document.getElementById('messagesCount');
        if (messagesCountElement) {
            if (messageCount > 0) {
                messagesCountElement.classList.remove('hidden');
                messagesCountElement.textContent = messageCount > 99 ? '99+' : messageCount;
            } else {
                messagesCountElement.classList.add('hidden');
            }
        }
    } catch (error) {
        console.error('Error loading message count:', error);
    }
}
</script>

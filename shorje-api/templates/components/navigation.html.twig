                        <i class="fas fa-question-circle text-lg"></i>
                    </a>
                </div>

                <!-- Contact -->
                <div class="relative">
                    <a href="/contact" class="p-3 text-gray-600 hover:text-blue-600 dark:hover:text-blue-400 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded-xl hover:bg-gray-100 dark:hover:bg-slate-700">
                        <i class="fas fa-envelope text-lg"></i>
                    </a>

{# Navigation Component - Reusable across all pages #}
<!-- Top Banner -->
<div class="bg-gradient-to-r from-teal-500 via-blue-500 to-purple-600 text-white py-2">
    <div class="container mx-auto px-4">
        <div class="flex items-center justify-between text-sm">
            <div class="flex items-center space-x-4">
                <div class="flex items-center space-x-2">
                    <i class="fas fa-confetti text-yellow-400"></i>
                    <span>بيع واشتري من جيرانك المحليين</span>
                </div>
                <div class="w-1 h-1 bg-white rounded-full"></div>
                <div class="flex items-center space-x-2">
                    <i class="fas fa-confetti text-yellow-400"></i>
                    <span>تواصل مباشر مع البائعين</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Navigation -->
<nav class="bg-white shadow-lg sticky top-0 z-50">
    <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
            <!-- Logo -->
            <div class="flex items-center space-x-4">
                <a href="/home" class="flex items-center space-x-3 group">
                    <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center shadow-lg">
                        <i class="fas fa-store text-white text-lg"></i>
                    </div>
                    <div class="flex flex-col">
                        <span class="text-xl font-bold text-blue-600 group-hover:text-blue-700 transition-colors">شورجي</span>
                        <span class="text-xs text-gray-500 font-medium">سوق متعدد البائعين</span>
                    </div>
                </a>
            </div>

            <!-- Navigation Links -->
            <div class="hidden md:flex items-center space-x-1">
                <a href="/home" class="flex items-center space-x-2 px-4 py-2 rounded-lg text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-all duration-300 {{ app.request.get('_route') == 'app_home' ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 font-semibold' : '' }}">
                    <i class="fas fa-home text-lg"></i>
                    <span class="font-medium">الرئيسية</span>
                </a>
                <a href="/products" class="flex items-center space-x-2 px-4 py-2 rounded-lg text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-all duration-300 {{ app.request.get('_route') == 'app_products' ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 font-semibold' : '' }}">
                    <i class="fas fa-box text-lg"></i>
                    <span class="font-medium">المنتجات</span>
                </a>
                <a href="/users" class="flex items-center space-x-2 px-4 py-2 rounded-lg text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-all duration-300 {{ app.request.get('_route') == 'app_home' ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 font-semibold' : '' }}">
                    <i class="fas fa-users text-lg"></i>
                    <span class="font-medium">البائعين</span>
                </a>
                <a href="/messages" class="flex items-center space-x-2 px-4 py-2 rounded-lg text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-all duration-300 {{ app.request.get('_route') == 'app_messages' ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 font-semibold' : '' }}">
                    <i class="fas fa-comments text-lg"></i>
                    <span class="font-medium">الرسائل</span>
                </a>
                {% if app.user %}
                <a href="/products/my" class="flex items-center space-x-2 px-4 py-2 rounded-lg text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-all duration-300 {{ app.request.get('_route') == 'app_products_my' ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 font-semibold' : '' }}">
                    <i class="fas fa-box text-lg"></i>
                    <span class="font-medium">منتجاتي</span>
                </a>
                <a href="/saved" class="flex items-center space-x-2 px-4 py-2 rounded-lg text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-all duration-300 {{ app.request.get('_route') == 'app_saved' ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 font-semibold' : '' }}">
                    <i class="fas fa-heart text-lg"></i>
                    <span class="font-medium">المحفوظات</span>
                </a>
                {% endif %}
            </div>

            <!-- User Menu -->
            <div class="flex items-center space-x-4">
                <!-- Language Switcher -->
                <div class="relative">
                    <button id="languageToggle" class="p-2 text-gray-600 hover:text-blue-600 transition-colors">
                        <i class="fas fa-language text-lg"></i>
                    </button>
                </div>

                <!-- Notifications -->
                <div class="relative">
                    <button class="p-2 text-gray-600 hover:text-blue-600 transition-colors">
                        <i class="fas fa-bell text-lg"></i>
                        <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-4 w-4 flex items-center justify-center">0</span>
                    </button>
                </div>

                <!-- Messages -->
                <div class="relative">
                    <a href="/messages" class="p-2 text-gray-600 hover:text-blue-600 transition-colors">
                        <i class="fas fa-comments text-lg"></i>
                        <span class="absolute -top-1 -right-1 bg-green-500 text-white text-xs rounded-full h-4 w-4 flex items-center justify-center">0</span>
                    </a>
                </div>

                {% if app.user %}
                <!-- User Dropdown -->
                <div class="relative">
                    <button id="userDropdown" class="flex items-center space-x-3 bg-gray-100 rounded-lg px-3 py-2 hover:bg-gray-200 transition-colors">
                        <div class="flex flex-col text-right">
                            <span class="text-gray-800 font-medium text-sm">{{ app.user.firstName }} {{ app.user.lastName }}</span>
                            <span class="text-gray-500 text-xs">مرحباً بك</span>
                        </div>
                        <img src="/api/user/avatar/{{ app.user.id }}" alt="Profile" class="w-8 h-8 rounded-full border-2 border-gray-300">
                        <i class="fas fa-chevron-down text-gray-400 text-xs" id="dropdownArrow"></i>
                    </button>
                    
                    <!-- Dropdown Menu -->
                    <div id="userDropdownMenu" class="absolute right-0 mt-2 w-48 bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-gray-200 dark:border-slate-600 opacity-0 invisible scale-95 transition-all duration-200">
                        <div class="py-2">
                            <a href="/profile" class="flex items-center space-x-3 px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-slate-700 transition-colors">
                                <i class="fas fa-user text-gray-400"></i>
                                <span>الملف الشخصي</span>
                            </a>
                            <a href="/products/my" class="flex items-center space-x-3 px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-slate-700 transition-colors">
                                <i class="fas fa-box text-gray-400"></i>
                                <span>منتجاتي</span>
                            </a>
                            <a href="/saved" class="flex items-center space-x-3 px-4 py-3 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-slate-700 transition-colors">
                                <i class="fas fa-heart text-gray-400"></i>
                                <span>المحفوظات</span>
                            </a>
                            {% if app.user and ('ROLE_ADMIN' in app.user.roles or 'ROLE_SUPER_ADMIN' in app.user.roles) %}
                            <hr class="my-2 border-gray-200 dark:border-slate-600">
                            <a href="/admin" class="flex items-center space-x-3 px-4 py-3 text-purple-600 dark:text-purple-400 hover:bg-purple-50 dark:hover:bg-purple-900/20 transition-colors">
                                <i class="fas fa-cog text-purple-400"></i>
                                <span>لوحة الإدارة</span>
                            </a>
                            {% endif %}
                            <hr class="my-2 border-gray-200 dark:border-slate-600">
                            <a href="/logout" class="flex items-center space-x-3 px-4 py-3 text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors">
                                <i class="fas fa-sign-out-alt"></i>
                                <span>تسجيل الخروج</span>
                            </a>
                        </div>
                    </div>
                </div>
                {% else %}
                <!-- Guest Actions -->
                <div class="flex items-center space-x-3">
                    <a href="/login" class="text-gray-700 dark:text-gray-300 hover:text-emerald-600 dark:hover:text-emerald-400 font-medium px-4 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-slate-700 transition-all duration-300">
                        <i class="fas fa-sign-in-alt ml-2"></i>تسجيل الدخول
                    </a>
                    <a href="/register" class="bg-gradient-to-r from-emerald-500 to-blue-500 text-white px-6 py-2 rounded-lg font-medium hover:from-emerald-600 hover:to-blue-600 transition-all duration-300 shadow-lg hover:shadow-xl">
                        <i class="fas fa-user-plus ml-2"></i>إنشاء حساب
                    </a>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</nav>

<!-- Secondary Navigation -->
<nav class="bg-white shadow-sm border-b border-gray-200">
    <div class="container mx-auto px-4">
        <div class="flex items-center space-x-8 py-3">
            <a href="/home" class="flex items-center space-x-2 text-gray-700 hover:text-blue-600 transition-colors {{ app.request.get('_route') == 'app_home' ? 'text-blue-600 font-semibold' : '' }}">
                <i class="fas fa-home"></i>
                <span>الرئيسية</span>
            </a>
            <a href="/products" class="flex items-center space-x-2 text-gray-700 hover:text-blue-600 transition-colors {{ app.request.get('_route') == 'app_products' ? 'text-blue-600 font-semibold' : '' }}">
                <i class="fas fa-th-large"></i>
                <span>المنتجات</span>
            </a>
            <a href="/users" class="flex items-center space-x-2 text-gray-700 hover:text-blue-600 transition-colors {{ app.request.get('_route') == 'app_users' ? 'text-blue-600 font-semibold' : '' }}">
                <i class="fas fa-users"></i>
                <span>البائعين</span>
            </a>
            {% if app.user %}
            <a href="/products/my" class="flex items-center space-x-2 text-gray-700 hover:text-blue-600 transition-colors {{ app.request.get('_route') == 'app_products_my' ? 'text-blue-600 font-semibold' : '' }}">
                <i class="fas fa-box"></i>
                <span>منتجاتي</span>
            </a>
            {% endif %}
            <a href="/help" class="flex items-center space-x-2 text-gray-700 hover:text-orange-600 transition-colors {{ app.request.get('_route') == 'app_help' ? 'text-orange-600 font-semibold' : '' }}">
                <i class="fas fa-question-circle text-orange-500"></i>
                <span>كيف يعمل</span>
            </a>
            <a href="/contact" class="flex items-center space-x-2 text-gray-700 hover:text-green-600 transition-colors {{ app.request.get('_route') == 'app_contact' ? 'text-green-600 font-semibold' : '' }}">
                <i class="fas fa-envelope text-green-500"></i>
                <span>اتصل بنا</span>
            </a>
        </div>
    </div>
</nav>

<script>
// Navigation functionality
document.addEventListener('DOMContentLoaded', function() {
    // User dropdown functionality
    const userDropdown = document.getElementById('userDropdown');
    const userDropdownMenu = document.getElementById('userDropdownMenu');
    const dropdownArrow = document.getElementById('dropdownArrow');
    
    if (userDropdown && userDropdownMenu) {
        userDropdown.addEventListener('click', function(e) {
            e.stopPropagation();
            if (userDropdownMenu.classList.contains('opacity-0')) {
                userDropdownMenu.classList.remove('opacity-0', 'invisible', 'scale-95');
                userDropdownMenu.classList.add('opacity-100', 'visible', 'scale-100');
                dropdownArrow.classList.add('rotate-180');
            } else {
                userDropdownMenu.classList.add('opacity-0', 'invisible', 'scale-95');
                userDropdownMenu.classList.remove('opacity-100', 'visible', 'scale-100');
                dropdownArrow.classList.remove('rotate-180');
            }
        });
    }
    
    // Close dropdown when clicking outside
    document.addEventListener('click', function(event) {
        if (userDropdown && !userDropdown.contains(event.target)) {
            userDropdownMenu.classList.add('opacity-0', 'invisible', 'scale-95');
            userDropdownMenu.classList.remove('opacity-100', 'visible', 'scale-100');
            dropdownArrow.classList.remove('rotate-180');
        }
    });

    // Language switcher functionality
    const languageToggle = document.getElementById('languageToggle');
    
    if (languageToggle) {
        languageToggle.addEventListener('click', function() {
            // Toggle between Arabic and English
            const currentLang = document.documentElement.lang || 'ar';
            const newLang = currentLang === 'ar' ? 'en' : 'ar';
            
            // Update document language
            document.documentElement.lang = newLang;
            
            // Store language preference
            localStorage.setItem('language', newLang);
            
            // Show toast notification
            showToast(newLang === 'ar' ? 'تم التبديل إلى العربية' : 'Switched to English', 'success');
            
            // You can add more language switching logic here
            // For example, reload the page or make an API call to change language
        });
    }
});

function updateThemeIcon(theme) {
    const themeIcon = document.getElementById('themeIcon');
    if (themeIcon) {
        if (theme === 'dark') {
            themeIcon.className = 'fas fa-sun text-xl';
        } else {
            themeIcon.className = 'fas fa-moon text-xl';
        }
    }
}

// Show toast notification
function showToast(message, type = 'info') {
    const toast = document.createElement('div');
    toast.className = `fixed top-4 right-4 z-50 px-6 py-3 rounded-lg text-white font-medium shadow-lg transition-all duration-300 ${
        type === 'success' ? 'bg-green-500' : 
        type === 'error' ? 'bg-red-500' : 
        'bg-blue-500'
    }`;
    toast.textContent = message;
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
        toast.remove();
    }, 3000);
}
</script>

{% extends 'base.html.twig' %}

{% block title %}البائعين - شورجي{% endblock %}

{% block body %}
<!-- Include Navigation Component -->
{% include 'components/navigation.html.twig' %}

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900">
    <!-- Header Section -->
    <div class="relative overflow-hidden">
        <!-- Background Pattern -->
        <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 via-purple-600/10 to-emerald-600/10"></div>
        <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%239C92AC" fill-opacity="0.1"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-20"></div>
        
        <div class="relative z-10 container mx-auto px-4 py-12">
            <!-- Page Header -->
            <div class="text-center mb-12">
                <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-green-500 to-blue-600 rounded-full mb-6 shadow-lg">
                    <i class="fas fa-users text-3xl text-white"></i>
                </div>
                <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
                    <span class="gradient-text">البائعين</span>
                </h1>
                <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
                    اكتشف أفضل البائعين والمتاجر في منطقتك
                </p>
            </div>
        </div>
    </div>

    <div class="container mx-auto px-4 py-8">
        <!-- Search and Filter Section -->
        <div class="glass dark:glass-dark rounded-2xl p-6 mb-8">
            <div class="flex flex-col md:flex-row gap-4">
                <!-- Search Bar -->
                <div class="flex-1">
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i class="fas fa-search text-gray-400"></i>
                        </div>
                        <input type="text" id="searchInput" placeholder="ابحث عن البائعين..." 
                               class="w-full pl-12 pr-4 py-3 bg-white dark:bg-slate-800 border border-gray-300 dark:border-slate-600 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400">
                    </div>
                </div>
                
                <!-- Filter Dropdown -->
                <div class="relative">
                    <select id="filterSelect" class="appearance-none bg-white dark:bg-slate-800 border border-gray-300 dark:border-slate-600 rounded-2xl px-4 py-3 pr-8 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300">
                        <option value="all">جميع البائعين</option>
                        <option value="top-rated">الأعلى تقييماً</option>
                        <option value="newest">الأحدث</option>
                        <option value="most-products">الأكثر منتجات</option>
                    </select>
                    <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                        <i class="fas fa-chevron-down text-gray-400"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Dashboard -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="glass dark:glass-dark rounded-2xl p-6 text-center hover:scale-105 transition-transform duration-300">
                <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2" id="totalSellers">0</div>
                <div class="text-gray-600 dark:text-gray-300">إجمالي البائعين</div>
            </div>
            <div class="glass dark:glass-dark rounded-2xl p-6 text-center hover:scale-105 transition-transform duration-300">
                <div class="text-3xl font-bold text-green-600 dark:text-green-400 mb-2" id="activeSellers">0</div>
                <div class="text-gray-600 dark:text-gray-300">البائعين النشطين</div>
            </div>
            <div class="glass dark:glass-dark rounded-2xl p-6 text-center hover:scale-105 transition-transform duration-300">
                <div class="text-3xl font-bold text-purple-600 dark:text-purple-400 mb-2" id="totalProducts">0</div>
                <div class="text-gray-600 dark:text-gray-300">إجمالي المنتجات</div>
            </div>
            <div class="glass dark:glass-dark rounded-2xl p-6 text-center hover:scale-105 transition-transform duration-300">
                <div class="text-3xl font-bold text-orange-600 dark:text-orange-400 mb-2" id="avgRating">0</div>
                <div class="text-gray-600 dark:text-gray-300">متوسط التقييم</div>
            </div>
        </div>

        <!-- Loading State -->
        <div id="loadingState" class="text-center py-12">
            <i class="fas fa-spinner fa-spin text-4xl text-primary-500 mb-4"></i>
            <p class="text-lg text-gray-600 dark:text-gray-300">جاري تحميل البائعين...</p>
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="hidden text-center py-12">
            <i class="fas fa-users text-6xl text-gray-400 mb-6"></i>
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-3">لا توجد بائعين بعد</h2>
            <p class="text-lg text-gray-600 dark:text-gray-300">كن أول من ينضم كبائع في منصتنا!</p>
        </div>

        <!-- Sellers Grid -->
        <div id="sellersGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Sellers will be loaded here by JavaScript -->
        </div>
    </div>
</div>

<style>
.glass {
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.18);
}

.glass-dark {
    background: rgba(15, 23, 42, 0.25);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.gradient-text {
    background: linear-gradient(135deg, #10b981, #3b82f6, #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.seller-card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.seller-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
}
</style>

<script>
let currentSellers = [];

document.addEventListener('DOMContentLoaded', function() {
    loadSellers();
    
    // Search functionality
    document.getElementById('searchInput').addEventListener('input', function() {
        filterSellers();
    });
    
    // Filter functionality
    document.getElementById('filterSelect').addEventListener('change', function() {
        filterSellers();
    });
});

// Load sellers
async function loadSellers() {
    console.log('Loading sellers...');
    
    try {
        // For now, we'll simulate sellers data since we don't have a backend endpoint yet
        const mockSellers = [
            {
                id: 1,
                name: 'محل الإلكترونيات الحديثة',
                description: 'متخصص في بيع الأجهزة الإلكترونية والهواتف الذكية',
                rating: 4.8,
                productsCount: 45,
                joinDate: '2023-01-15',
                avatar: '/images/seller1.jpg',
                isVerified: true,
                isOnline: true
            },
            {
                id: 2,
                name: 'متجر الأزياء الراقية',
                description: 'أحدث صيحات الموضة والملابس النسائية',
                rating: 4.6,
                productsCount: 32,
                joinDate: '2023-03-20',
                avatar: '/images/seller2.jpg',
                isVerified: true,
                isOnline: false
            },
            {
                id: 3,
                name: 'مكتبة الكتب المستعملة',
                description: 'كتب دراسية وروايات ومجلات متنوعة',
                rating: 4.4,
                productsCount: 28,
                joinDate: '2023-05-10',
                avatar: '/images/seller3.jpg',
                isVerified: false,
                isOnline: true
            }
        ];
        
        currentSellers = mockSellers;
        displaySellers(currentSellers);
        updateStats(currentSellers);

        // Hide loading state
        document.getElementById('loadingState').classList.add('hidden');
        
        // Show empty state if no sellers
        if (currentSellers.length === 0) {
            document.getElementById('emptyState').classList.remove('hidden');
        } else {
            document.getElementById('emptyState').classList.add('hidden');
        }
    } catch (error) {
        console.error('Error loading sellers:', error);
        document.getElementById('loadingState').classList.add('hidden');
        document.getElementById('emptyState').classList.remove('hidden');
    }
}

// Update stats cards
function updateStats(sellers) {
    const totalSellers = sellers.length;
    const activeSellers = sellers.filter(seller => seller.isOnline).length;
    const totalProducts = sellers.reduce((sum, seller) => sum + seller.productsCount, 0);
    const avgRating = sellers.length > 0 ? (sellers.reduce((sum, seller) => sum + seller.rating, 0) / sellers.length).toFixed(1) : 0;
    
    document.getElementById('totalSellers').textContent = totalSellers;
    document.getElementById('activeSellers').textContent = activeSellers;
    document.getElementById('totalProducts').textContent = totalProducts;
    document.getElementById('avgRating').textContent = avgRating;
}

// Display sellers
function displaySellers(sellers) {
    const grid = document.getElementById('sellersGrid');
    
    if (sellers.length === 0) {
        grid.innerHTML = '<div class="col-span-full text-center py-12"><p class="text-gray-500 dark:text-gray-400">لا توجد بائعين</p></div>';
        return;
    }
    
    grid.innerHTML = sellers.map(seller => `
        <div class="seller-card bg-white dark:bg-slate-800 rounded-2xl shadow-lg hover:shadow-xl border border-gray-200 dark:border-slate-600 overflow-hidden">
            <div class="relative">
                ${seller.avatar ? 
                    `<img src="${seller.avatar}" alt="${seller.name}" class="w-full h-48 object-cover">` :
                    `<div class="w-full h-48 bg-gradient-to-br from-gray-200 to-gray-300 dark:from-slate-700 dark:to-slate-600 flex items-center justify-center">
                        <i class="fas fa-user text-4xl text-gray-400 dark:text-gray-500"></i>
                    </div>`
                }
                <div class="absolute top-4 right-4 flex space-x-2">
                    ${seller.isVerified ? '<span class="bg-blue-500 text-white px-2 py-1 rounded-full text-xs font-bold"><i class="fas fa-check"></i></span>' : ''}
                    <span class="bg-${seller.isOnline ? 'green' : 'gray'}-500 text-white px-2 py-1 rounded-full text-xs font-bold">
                        ${seller.isOnline ? 'متصل' : 'غير متصل'}
                    </span>
                </div>
            </div>
            
            <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 line-clamp-2">${seller.name}</h3>
                <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3">${seller.description}</p>
                
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center space-x-2">
                        <i class="fas fa-star text-yellow-500"></i>
                        <span class="text-sm text-gray-600 dark:text-gray-300">${seller.rating}</span>
                    </div>
                    <div class="flex items-center space-x-2">
                        <i class="fas fa-box text-gray-400"></i>
                        <span class="text-sm text-gray-600 dark:text-gray-300">${seller.productsCount} منتج</span>
                    </div>
                </div>
                
                <div class="flex items-center justify-between mb-4">
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                        <i class="fas fa-calendar ml-1"></i>
                        انضم في ${new Date(seller.joinDate).toLocaleDateString('ar-SA')}
                    </div>
                </div>
                
                <div class="flex space-x-2">
                    <a href="/sellers/${seller.id}" class="flex-1 bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-4 py-2 rounded-lg font-medium transition-all duration-300 text-sm shadow-lg hover:shadow-xl transform hover:scale-105 text-center">
                        <i class="fas fa-eye ml-1"></i>عرض المتجر
                    </a>
                    <button onclick="saveSeller(${seller.id})" class="bg-pink-500 hover:bg-pink-600 text-white px-3 py-2 rounded-lg font-medium transition-all duration-300 text-sm shadow-lg hover:shadow-xl transform hover:scale-105">
                        <i class="fas fa-heart"></i>
                    </button>
                </div>
            </div>
        </div>
    `).join('');
}

// Filter sellers
function filterSellers() {
    const searchTerm = document.getElementById('searchInput').value.toLowerCase();
    const filterType = document.getElementById('filterSelect').value;
    
    let filteredSellers = currentSellers;
    
    // Apply search filter
    if (searchTerm) {
        filteredSellers = filteredSellers.filter(seller => 
            seller.name.toLowerCase().includes(searchTerm) || 
            seller.description.toLowerCase().includes(searchTerm)
        );
    }
    
    // Apply type filter
    switch(filterType) {
        case 'top-rated':
            filteredSellers = filteredSellers.sort((a, b) => b.rating - a.rating);
            break;
        case 'newest':
            filteredSellers = filteredSellers.sort((a, b) => new Date(b.joinDate) - new Date(a.joinDate));
            break;
        case 'most-products':
            filteredSellers = filteredSellers.sort((a, b) => b.productsCount - a.productsCount);
            break;
    }
    
    displaySellers(filteredSellers);
}

// Save seller to favorites
function saveSeller(sellerId) {
    showToast('تم حفظ البائع في المحفوظات', 'success');
    console.log('Saved seller:', sellerId);
}

// Show toast notification
function showToast(message, type = 'info') {
    const toast = document.createElement('div');
    toast.className = `fixed top-4 right-4 z-50 px-6 py-3 rounded-lg text-white font-medium shadow-lg transition-all duration-300 ${
        type === 'success' ? 'bg-green-500' : 
        type === 'error' ? 'bg-red-500' : 
        'bg-blue-500'
    }`;
    toast.textContent = message;
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
        toast.remove();
    }, 3000);
}
</script>
{% endblock %}

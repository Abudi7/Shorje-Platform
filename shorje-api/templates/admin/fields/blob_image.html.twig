{% if field.value %}
    {% if field.value is iterable %}
        {# Display blob data as image #}
        <div class="blob-image-display">
            <img src="data:{{ entity.imageMimeType }};base64,{{ field.value }}" 
                 alt="Slider Image" 
                 class="max-w-xs max-h-32 object-cover rounded-lg shadow-md">
            <p class="text-sm text-gray-500 mt-2">
                نوع الملف: {{ entity.imageMimeType }}
            </p>
        </div>
    {% else %}
        {# Display file upload field for new entries #}
        <div class="file-upload-field">
            <input type="file" 
                   name="{{ field.property }}" 
                   accept="image/*" 
                   class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100">
            <p class="text-sm text-gray-500 mt-2">
                اختر صورة للسلايدر (JPG, PNG, GIF, WebP)
            </p>
        </div>
    {% endif %}

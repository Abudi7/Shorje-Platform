{% extends 'base.html.twig' %}

{% block title %}الإشعارات - شورجي{% endblock %}

{% block body %}
<style>
    /* Custom animations and styles */
    .glass {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.18);
    }
    
    .glass-dark {
        background: rgba(15, 23, 42, 0.25);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .gradient-text {
        background: linear-gradient(135deg, #10b981, #3b82f6, #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .notification-card {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .notification-card:hover {
        transform: translateY(-2px);
    }
    
    .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
    }
    
    .custom-scrollbar::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.1);
        border-radius: 3px;
    }
    
    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: linear-gradient(135deg, #3b82f6, #8b5cf6);
        border-radius: 3px;
    }
    
    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(135deg, #2563eb, #7c3aed);
    }
    
    .line-clamp-2 {
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
    }
    
    .pulse-animation {
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    
    @keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: .5;
        }
    }
</style>

<div class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50 to-green-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900">
    <!-- Modern Header -->
    <nav class="glass sticky top-0 z-50 border-b border-white/20 dark:border-slate-700/30">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-20">
                <!-- Logo Section -->
                <div class="flex items-center">
                    <div class="flex items-center space-x-4">
                        <div class="h-12 w-12 bg-gradient-to-br from-emerald-500 via-blue-500 to-purple-500 rounded-2xl flex items-center justify-center shadow-lg relative overflow-hidden">
                            <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent"></div>
                            <i class="fas fa-bell text-white text-xl relative z-10"></i>
                        </div>
                        <div>
                            <h1 class="text-3xl font-bold gradient-text">الإشعارات</h1>
                            <p class="text-sm text-gray-600 dark:text-gray-400">إشعارات المنتجات الجديدة من البائعين المتابعين</p>
                        </div>
                    </div>
                </div>

                <!-- Navigation Actions -->
                <div class="flex items-center space-x-4">
                    <a href="/home" class="flex items-center space-x-2 text-gray-700 dark:text-gray-300 hover:text-emerald-600 dark:hover:text-emerald-400 font-medium transition-colors px-4 py-2 rounded-xl hover:bg-white/50 dark:hover:bg-slate-800/50">
                        <i class="fas fa-home"></i>
                        <span>الرئيسية</span>
                    </a>
                    <a href="/products" class="flex items-center space-x-2 text-gray-700 dark:text-gray-300 hover:text-emerald-600 dark:hover:text-emerald-400 font-medium transition-colors px-4 py-2 rounded-xl hover:bg-white/50 dark:hover:bg-slate-800/50">
                        <i class="fas fa-th-large"></i>
                        <span>المنتجات</span>
                    </a>
                    <a href="/messages" class="flex items-center space-x-2 text-gray-700 dark:text-gray-300 hover:text-emerald-600 dark:hover:text-emerald-400 font-medium transition-colors px-4 py-2 rounded-xl hover:bg-white/50 dark:hover:bg-slate-800/50">
                        <i class="fas fa-comments"></i>
                        <span>الرسائل</span>
                    </a>
                    <a href="/profile" class="flex items-center space-x-2 text-gray-700 dark:text-gray-300 hover:text-emerald-600 dark:hover:text-emerald-400 font-medium transition-colors px-4 py-2 rounded-xl hover:bg-white/50 dark:hover:bg-slate-800/50">
                        <i class="fas fa-user"></i>
                        <span>الملف الشخصي</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Page Header -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
                <i class="fas fa-bell text-emerald-500 ml-3"></i>
                إشعارات المنتجات الجديدة
            </h1>
            <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
                احصل على إشعارات فورية عندما ينشر البائعون الذين تتابعهم منتجات جديدة
            </p>
        </div>

        <!-- Notifications Container -->
        <div class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm rounded-3xl shadow-2xl border border-white/20 dark:border-slate-700/20 p-8">
            <!-- Header with Actions -->
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
                        <i class="fas fa-bell text-emerald-500 ml-2"></i>الإشعارات الحديثة
                    </h2>
                    <p class="text-gray-600 dark:text-gray-400 mt-1" id="notificationsCount">جاري التحميل...</p>
                </div>
                <div class="flex items-center space-x-4">
                    <button onclick="markAllAsRead()" class="px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-500 hover:from-blue-600 hover:to-purple-600 text-white rounded-2xl font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg">
                        <i class="fas fa-check-double ml-2"></i>تحديد الكل كمقروء
                    </button>
                    <button onclick="loadNotifications()" class="px-6 py-3 bg-gradient-to-r from-emerald-500 to-green-500 hover:from-emerald-600 hover:to-green-600 text-white rounded-2xl font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg">
                        <i class="fas fa-sync-alt ml-2"></i>تحديث
                    </button>
                </div>
            </div>

            <!-- Loading State -->
            <div id="loadingState" class="text-center py-12">
                <div class="inline-flex items-center space-x-3">
                    <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-emerald-500"></div>
                    <span class="text-gray-600 dark:text-gray-400 font-medium">جاري تحميل الإشعارات...</span>
                </div>
            </div>

            <!-- Empty State -->
            <div id="emptyState" class="text-center py-16 hidden">
                <div class="w-24 h-24 bg-gradient-to-br from-gray-400 to-gray-500 rounded-3xl flex items-center justify-center mx-auto mb-8 shadow-lg">
                    <i class="fas fa-bell-slash text-white text-3xl"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-600 dark:text-slate-300 mb-4">لا توجد إشعارات</h3>
                <p class="text-gray-500 dark:text-slate-400 text-lg">لم يتم العثور على إشعارات جديدة من البائعين المتابعين</p>
                <a href="/products" class="mt-6 inline-block bg-gradient-to-r from-emerald-500 to-blue-500 text-white px-8 py-3 rounded-2xl font-semibold hover:from-emerald-600 hover:to-blue-600 transition-all duration-300 shadow-lg">
                    <i class="fas fa-search ml-2"></i>تصفح المنتجات
                </a>
            </div>

            <!-- Notifications List -->
            <div id="notificationsList" class="space-y-4">
                <!-- Notifications will be loaded here -->
            </div>
        </div>
    </div>
</div>

<script>
let notifications = [];

// Load notifications on page load
document.addEventListener('DOMContentLoaded', function() {
    loadNotifications();
});

// Load notifications from API
async function loadNotifications() {
    try {
        document.getElementById('loadingState').classList.remove('hidden');
        document.getElementById('emptyState').classList.add('hidden');
        
        const response = await apiCall('/web/notifications');
        
        if (response.notifications && response.notifications.length > 0) {
            notifications = response.notifications;
            renderNotifications(notifications);
            document.getElementById('emptyState').classList.add('hidden');
            document.getElementById('notificationsCount').textContent = `${response.total} إشعار`;
        } else {
            document.getElementById('notificationsList').innerHTML = '';
            document.getElementById('emptyState').classList.remove('hidden');
            document.getElementById('notificationsCount').textContent = '0 إشعار';
        }
        
    } catch (error) {
        console.error('Error loading notifications:', error);
        document.getElementById('notificationsList').innerHTML = `
            <div class="text-center py-12">
                <i class="fas fa-exclamation-triangle text-4xl text-red-500 mb-4"></i>
                <p class="text-red-500 text-lg">حدث خطأ في تحميل الإشعارات</p>
                <p class="text-slate-600 dark:text-slate-400 mt-2">يرجى المحاولة مرة أخرى</p>
            </div>
        `;
        showToast('فشل في تحميل الإشعارات: ' + error.message, 'error');
    } finally {
        document.getElementById('loadingState').classList.add('hidden');
    }
}

// Render notifications
function renderNotifications(notificationsList) {
    const container = document.getElementById('notificationsList');
    
    container.innerHTML = notificationsList.map(notification => `
        <div class="notification-card bg-white dark:bg-slate-700 rounded-2xl shadow-lg border border-gray-200 dark:border-slate-600 p-6 hover:shadow-xl transition-all duration-300">
            <div class="flex items-start space-x-4">
                <!-- Notification Icon -->
                <div class="w-12 h-12 bg-gradient-to-r from-emerald-500 to-blue-500 rounded-2xl flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-box text-white text-lg"></i>
                </div>
                
                <!-- Notification Content -->
                <div class="flex-1 min-w-0">
                    <div class="flex items-start justify-between">
                        <div class="flex-1">
                            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">${notification.title}</h3>
                            <p class="text-gray-600 dark:text-gray-300 mb-2">${notification.message}</p>
                            
                            <!-- Product Info -->
                            <div class="bg-gray-50 dark:bg-slate-600 rounded-xl p-4 mb-3">
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm font-semibold text-gray-700 dark:text-gray-300">المنتج:</span>
                                    <span class="bg-emerald-100 dark:bg-emerald-900 text-emerald-800 dark:text-emerald-200 px-3 py-1 rounded-full text-sm font-medium">
                                        ${notification.product.price} ${notification.product.currencyDisplay || notification.product.currency}
                                    </span>
                                </div>
                                <div class="flex items-center justify-between text-sm text-gray-600 dark:text-gray-400">
                                    <span>${notification.product.categoryDisplay || notification.product.category}</span>
                                    <span>${notification.product.city}</span>
                                </div>
                            </div>
                            
                            <!-- Seller Info -->
                            <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
                                <i class="fas fa-user ml-1"></i>
                                <span>من: ${notification.seller.name}</span>
                                <span class="mx-2">•</span>
                                <i class="fas fa-clock ml-1"></i>
                                <span>${formatDate(notification.createdAt)}</span>
                            </div>
                        </div>
                        
                        <!-- Actions -->
                        <div class="flex flex-col space-y-2 ml-4">
                            <button onclick="viewProduct(${notification.product.id})" class="px-4 py-2 bg-gradient-to-r from-emerald-500 to-green-500 text-white rounded-xl font-medium hover:from-emerald-600 hover:to-green-600 transition-all duration-300 text-sm">
                                <i class="fas fa-eye ml-1"></i>عرض المنتج
                            </button>
                            <button onclick="contactSeller(${notification.seller.id})" class="px-4 py-2 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-xl font-medium hover:from-blue-600 hover:to-purple-600 transition-all duration-300 text-sm">
                                <i class="fas fa-comments ml-1"></i>رسالة البائع
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    `).join('');
}

// View product function
function viewProduct(productId) {
    // Redirect to product details or show in modal
    showToast('سيتم عرض تفاصيل المنتج قريباً', 'info');
}

// Contact seller function
function contactSeller(sellerId) {
    window.location.href = `/messages?seller=${sellerId}`;
}

// Mark all as read
async function markAllAsRead() {
    try {
        await apiCall('/web/notifications/mark-all-read', { method: 'POST' });
        showToast('تم تحديد جميع الإشعارات كمقروءة', 'success');
        loadNotifications(); // Reload to update UI
    } catch (error) {
        showToast('فشل في تحديث الإشعارات: ' + error.message, 'error');
    }
}

// Format date
function formatDate(dateString) {
    const date = new Date(dateString);
    const now = new Date();
    const diffInHours = Math.floor((now - date) / (1000 * 60 * 60));
    
    if (diffInHours < 1) {
        return 'منذ دقائق';
    } else if (diffInHours < 24) {
        return `منذ ${diffInHours} ساعة`;
    } else {
        const diffInDays = Math.floor(diffInHours / 24);
        if (diffInDays < 7) {
            return `منذ ${diffInDays} يوم`;
        } else {
            return date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
        }
    }
}

// API call function
async function apiCall(url, options = {}) {
    const defaultOptions = {
        headers: {
            'Content-Type': 'application/json',
        },
    };
    
    const response = await fetch(url, { ...defaultOptions, ...options });
    
    if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
    }
    
    return await response.json();
}

// Toast notification function
function showToast(message, type = 'info') {
    const toast = document.createElement('div');
    toast.className = `fixed top-4 right-4 z-50 px-6 py-3 rounded-2xl text-white font-medium shadow-2xl transform transition-all duration-300 ${
        type === 'success' ? 'bg-emerald-500' : 
        type === 'error' ? 'bg-red-500' : 
        type === 'warning' ? 'bg-yellow-500' : 'bg-blue-500'
    }`;
    toast.textContent = message;
    
    document.body.appendChild(toast);
    
    setTimeout(() => {
        toast.style.transform = 'translateX(0)';
        toast.style.opacity = '1';
    }, 100);
    
    setTimeout(() => {
        toast.style.transform = 'translateX(100%)';
        toast.style.opacity = '0';
        setTimeout(() => {
            document.body.removeChild(toast);
        }, 300);
    }, 3000);
}
</script>
{% endblock %}
